<div class="card" >
  <div class="card-header">
    <h1>Edit Film <%= @film.title %></h1>
  </div>
  <div class="card-body">
    <!-- HERE WE SPECIFY THE HTTP METHOD, THEN HANDPICK THE CONTROLLER ACTION, e.g. "update" -->
    <%= form_for :film, method: :patch, :url => {:action => "update"}  do |f| %>
      <div class="row">
        <div class="col-md-2">
          <h5>TITLE:</h5><br>
          <h5>DIRECTOR:</h5><br>
          <h5>RELEASE:</h5><br>
          <h5>GENRE:</h5><br>
          <h5>GROSS:</h5><br>
          <h5>SUMMARY:</h5><br>
        </div>
        <div class="col-md-4">
          <%= f.text_field :title %><br><br><br>
          <%= f.text_field :director %><br><br>
          <%= f.date_field :release_date %><br><br><br>
          <select name="Genre">
            <option>Horror</option>
            <option>Drama</option>
            <option>Comedy</option>
            <option>Erotica</option>
            <option>Noir</option>
            <option>Romance</option>
            <option>Sci-Fi</option>
            <option>Action</option>
            <option>Fantasy</option>
            <option>Foreign</option>
            <option>Documentary</option>
          </select>
            <br><br><br>
          <%= f.text_field :opening_gross %><br><br>
          <%= f.text_field :summary %><br><br>
        </div>
        <div class="col-md-8">
          <!-- whitespace -->
        </div>
      </div>
  </div> <!-- CARD BODY -->
  <div class="card-footer">
    <%= f.submit  %>
    <br>
    <hr>
    <%= link_to "HOME", years_path %>
  </div>
    <% end %>
</div> <!-- CARD -->
